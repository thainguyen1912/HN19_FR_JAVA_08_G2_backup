body {
    font-family: Arial, Helvetica, sans-serif;
}

.header {
    background-color: cornflowerblue;
}

.menu-left {
    height: 540px;
    background-color: lightgray;
    border: 1px solid black;
}

.footer {
    background-color: lightgray;
}

input[type=text] {
    padding: 12px 20px;
    margin-left: 20px;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    width: 340px;
}

input[type=password] {
    /* width: 100%; */
    padding: 12px 20px;
    margin: 10px 0 10px 24px;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    width: 340px;
}

.btn-login {
    width: 10%;
    margin-left: 110px;
}

.btn-reset {
    width: 10%;
}

button {
    background-color: lightgray;
    color: black;
    padding: 14px 20px;
    border: none;
    cursor: pointer;
    /* width: 100%; */
}

button:hover {
    opacity: 0.8;
}

.content {
    border: 1px solid black;
}

span.psw {
    float: right;
    padding-top: 16px;
}